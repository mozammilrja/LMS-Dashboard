{
  "compilerOptions": {
    "target": "ES2020",                                // ⬅️ Modern JavaScript target
    "lib": ["DOM", "DOM.Iterable", "ESNext"],          // ✅ Covers browser + modern JS
    "allowJs": false,
    "skipLibCheck": true,                              // ⬅️ Prevents type issues from 3rd-party libs
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",                     // ⬅️ Required for Next.js 14+ + App Router
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
